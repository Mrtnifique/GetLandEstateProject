package getlandestate.pages;

import getlandestate.utilities.Driver;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class DashBoardPage {


    public WebElement loginButton;


    public DashBoardPage() {
        PageFactory.initElements(Driver.getDriver(), this);
    }

    @FindBy(xpath = "//div[@class='user-logo-nav navbar-nav']")
    public WebElement dashboardButton;



    @FindBy(xpath = "//span[normalize-space()='My Tour Requests']")
    public WebElement MyTourRequestsButton;

    @FindBy(xpath = "//button[@id='react-aria1620559696-:rj:-tab-response']")
    public WebElement MyResponseButton;

    // Randevu listesini tutan ana container
    @FindBy(xpath = "//div[@id[contains(., 'tabpane-response')]]")
    public WebElement randevuListesi;

    @FindBy(xpath = "//div[@id='react-aria8364566776-:r3:-tabpane-response']//span[@class='p-column-title'][normalize-space()='Mülkiyet']")
    public WebElement mulkiyetListesi;

    @FindBy(xpath = "//span[@class='p-column-title'][normalize-space()='Talep eden']")
    public WebElement talepEden;

    @FindBy(xpath = "//div[@id='react-aria8364566776-:r3:-tabpane-request']//thead[@class='p-datatable-thead']//span[@class='p-column-title'][normalize-space()='Tur Saati']")
    public WebElement turTarihi;

    @FindBy(xpath = "//div[@id='react-aria8364566776-:r3:-tabpane-response']//thead[@class='p-datatable-thead']//span[@class='p-column-title'][normalize-space()='Tur Saati']")
    public WebElement turSaati;

    @FindBy(xpath = "//body[1]/div[1]/div[1]/div[1]/div[3]/div[1]/div[2]/div[1]/div[1]/div[1]/div[1]/table[1]/tbody[1]/tr[1]/td[1]/div[1]/div[2]/div[1]/div[2]")
    public WebElement ilkRandevuSecButton;

    @FindBy(xpath = "//tbody/tr[1]/td[6]/div[1]/span[2]/button[2]//*[name()='svg']")
    public WebElement kabulEtButton;

    @FindBy(xpath = "//tbody/tr[1]/td[6]/div[1]/span[2]/button[1]//*[name()='svg']//*[name()='path' and contains(@fill-rule,'evenodd')]")
    public WebElement redButton;

    @FindBy(xpath = "//span[contains(text(),'Onaylandi')]")
    public WebElement Onaylandi;

    @FindBy(xpath = "//a[@href='/my-adverts']")
    public WebElement ilanlarimButton;


    @FindBy(xpath = "//body[1]/div[1]/div[1]/div[1]/div[3]/div[1]/div[2]/div[1]/div[1]/div[1]/div[1]/table[1]/tbody[1]/tr[1]/td[3]/div[1]/span[2]")
    public WebElement pasifIlaniAitRandevuTalebi;

    @FindBy(xpath = "//button[contains(text(), 'Randevu Al')]")
    public WebElement randevuAlButton;


    //US14-Aktif ilan için randevu
    @FindBy(xpath = "//div[@class='advert-title']")
    public WebElement aktifIlani;

    //tur ayarla formu
    @FindBy(xpath = "//h3[normalize-space()='Tur Ayarla']")
    public WebElement turAyarlaFormu;

    //tarih secme
    @FindBy(xpath = "//input[@id='tourDate']")
    public WebElement tarihSecme;

    //saat secme
    @FindBy(xpath = "//select[@id='tourTime']")
    public WebElement saatSecme;

    //tur talebi gonder butonu
    @FindBy(xpath = "//button[normalize-space()='Tur talebi gönder']")
    public WebElement turTalebiGonderButton;

    //talebiniz gonderildi
    @FindBy(xpath = "//span[normalize-space()='Talebiniz gonderildi']")
    public WebElement talebinizGonderildi;

    //tur talebi beklemede olarak listelenir
    @FindBy(xpath = "//tr[@draggable='false']//span[@class='p-tag-value'][normalize-space()='BEKLEMEDE']")
    public WebElement turTalebiBeklemede;


    //ilan listesi
    @FindBy(xpath = "//div[@class='advert-container container']")
    public WebElement ilanListesi;

    //ilan detay sayfasi
    @FindBy(xpath = "//p[contains(text(),'Sahibinden Satılık Uygun Daire')]")
    public WebElement ilanDetay;

    //detay sayfasi
    @FindBy(xpath = "//div[@class='user-layout-spacer']")
    public WebElement detaySayfasi;

    //Durum butonu
    @FindBy(xpath = "//div[@id='react-aria8364566776-:r5:-tabpane-response']//thead[@class='p-datatable-thead']//span[@class='p-column-title'][normalize-space()='Durum']")
    public WebElement durumElement;









}
